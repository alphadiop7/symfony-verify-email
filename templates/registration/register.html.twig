{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
                <div class="card-header"><h1>S'inscrire</h1></div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
                        {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'}) }}

                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    {{ form_end(registrationForm) }}
                    <p>Avez-vous déjà un compte?<a href="{{ path('app_login') }}">cliquez ici pour vous connecter</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

